<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hera_description">

<xacro:include filename="$(find hera_description)/urdf/actuators/manipulator/manip_prop.urdf.xacro"/>


  <xacro:macro name="SimpleTransmission" params="joint">
    <transmission name="transmission_${joint}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${joint}">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
        <actuator name="motor_${joint}">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
  </xacro:macro>
<!--manip_base_link-->
  <xacro:macro name="create_manip_base_link">
    <link name="manip_base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hera_description/meshes/manip_meshes/manip_base.STL"/>
        </geometry>
        <material name="dark_grey">        
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hera_description/meshes/manip_meshes/manip_base_col.STL"/>
        </geometry>
      </collision>
      <xacro:inertial_manip_base_link mass="0.225814419604843"/>
    </link>
  <!--manip_base_joint-->
    <joint name="manip_base_joint" type="fixed">
      <origin xyz="0.27075 0 0.0295" rpy="0 0 0" />
      <parent link="manip_support_link" />
      <child link="manip_base_link" />
      <axis xyz="0 0 0" />
      <limit lower="0" upper="0" effort="0" velocity="0" />
    </joint>
  </xacro:macro>

